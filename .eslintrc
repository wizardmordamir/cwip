{
  "env": {
    "node": true,
    "jest": true,
    "es2022": true,
    "commonjs": true,
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
  },
  "rules": {
    "comma-spacing": "error",
    "no-undef": "error",
    "key-spacing": "error",
    "quotes": ["error", "single"],
    "space-before-blocks": ["error", "always"],
    "eol-last": ["error", "always"],
    "semi": ["error", "always"],
    "no-unused-vars": [
      "warn", // Or "error"
      {
        "argsIgnorePattern": "^_", // Ignore variables starting with an underscore
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_",
      },
    ],
  },
  "globals": {
    "Bun": false,
  },
}
